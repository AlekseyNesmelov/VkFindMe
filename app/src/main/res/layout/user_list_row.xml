<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/step_x40"
    card_view:cardBackgroundColor="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/step_x2"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/step_x1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/step_x30"
            android:layout_height="@dimen/step_x30"
            android:id="@+id/icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/step_x2.5"
            android:layout_alignParentStart="true"
            android:background="@drawable/default_user_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toEndOf="@+id/icon"
            android:layout_marginStart="@dimen/step_x5"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_x9"
            android:layout_toRightOf="@+id/icon"
            tool:text="Name Surname"
            android:layout_marginLeft="@dimen/step_x2.5"/>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/step_x2.5"
            android:layout_height="@dimen/step_x25"
            android:layout_width="@dimen/step_x25"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/step_x2.5" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
